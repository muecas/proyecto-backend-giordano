<div class="container-fluid">
	<div class="row">
		<div class="col-12 mb-3 fs-3">Listado de productos</div>
		{{#if products}}
			<div class="col-12 mb-3">
				<table class="table table-striped">
					<thead>
					<tr>
						<th scope="col" width="15%">Imagen</th>
						<th scope="col">TÃ­tulo</th>
						<th scope="col" width="25%">Precio</th>
					</tr>
					</thead>
					<tbody>
					{{#each products}}
						<tr>
							<td class="align-middle"><img src="{{thumbnail}}" alt="" class="img-fluid"></td>
							<td class="align-middle">{{title}}</td>
							<td class="align-middle">{{price}}</td>
						</tr>
					{{/each}}
					</tbody>
				</table>
			</div>
		{{else}}
			<div class="col-12 mb-3">
				<div class="alert alert-danger" role="alert">
					<span>No hay productos ingresados</span>
				</div>
			</div>
		{{/if}}
		<div class="col-12">
			<a class="btn btn-primary" href="/" role="button">Agregar producto</a>
		</div>
	</div>
</div>